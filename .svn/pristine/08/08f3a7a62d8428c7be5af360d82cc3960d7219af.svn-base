body {
	background: #f9f9f9;
	font-family: Segoe UI;
	margin: 0;
}

#header {
	width: 900px;
	padding-top: 10px;
	margin: auto;
	color: #3d3d3d;
	height: 120px;
}

#header img {
	padding-top: 12px;
	margin-right: 15px;
}

#header h1 {
	padding-top: 3px;
	font-size: 36px;
	font-weight: lighter;
	line-height: 1.015;
	margin-left: 285px;
	border-left: 1px solid gray;
	padding-bottom: 5px;
}

.menu {
	background: #4169E1;
	color: white;
	text-align:center;
	height: 50px;
}

.menu a:hover {
	text-shadow: 1px 2px 2px rgba(0, 0, 0, 0.3);
	text-decoration: underline;
}

.menu a {
	vertical-align: middle;
	color: white;
	text-decoration: none;
}

.menu a b {
	font-weight: bold;
}

ul {
	padding-top: 10px;
}

li {
	padding-right: 20px;
	display: inline;
	list-style-type: none;
}

#body {
	background-color: #fff;
	border-bottom: 1px #f5f5f5 solid;
}

#content {
	padding-top: 20px;
	padding-bottom: 20px;
	width: 900px;
	margin: auto;
	text-align: justify;
}

h2 {
	margin: 0;
	background: url('imagens/separador.png') no-repeat center left;
	padding-left: 30px;
}

#bottom {
	width: 950px;
	margin: auto;
	padding: 10px 50px 50px 20px;
}